<section class="articles-area section-padding-0-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        <div class="mt-100">
          <div class="login-panel panel panel-default">
            <h1><div class="panel-heading">Update Place</div></h1>
            <div class="panel-body">
              <%= form_for [:admin, @place] do |f| %>
                <%= render "admin/shared/error_place_messages"%>
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, placeholder: @place.name , class: "form_control" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Update", class: "btn btn-primary" %>
                </div>
              <% end %>
              <%= link_to "Quay lai", admin_places_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
