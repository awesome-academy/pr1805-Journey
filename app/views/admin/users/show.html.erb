<div>
  <table class="table table-dark">
    <tr>
      <th>ID</th>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Is_Admin</th>
      <th>Bio</th>
      <th>Activated_At</th>
    </tr>
      <tr>
        <td><%= @user.id %></td>
        <td><%= image_tag @user.picture.presence || "default_avatar.png" %></td>
        <td><%= @user.name %></td>
        <td><%= @user.email  %></td>
        <td><%= @user.phone %></td>
        <td><%= @user.is_admin  %></td>
        <td><%= @user.bio %></td>
        <td><%= @user.activated_at %></td>
        <td>
          <% if current_admin? @user %>
            <td><%= link_to "Back", admin_users_path,
              class: "btn btn-primary" %></td>
          <% else %>
            <% if @user.blocked_at? %>
              <td><%= button_to "Unblock", admin_user_path(@user),
                  class: "btn btn-warning", method: :patch,
                  data: {confirm: "Are you sure ?"} %></td>
              <% else %>
                <td><%= button_to "Block", admin_user_path(@user),
                  class: "btn btn-warning", method: :patch,
                  data: {confirm: "Are you sure ?"} %></td>
              <% end %>
              <td><%= link_to "Back", admin_users_path,
                class: "btn btn-primary" %></td>
          <% end %>
        </td>
      </tr>
    </table>
</div>
