<div class="main-top" id="home">
  <div class="headder-top">
    <nav>
      <div id="logo">
        <h1>
         <%= link_to "SUN* Journey", root_url %>
        </h1>
      </div>
      <ul class="menu mt-2">
        <li class="active">
          <%= link_to "Home", index_path %>
        </li>
        <li class="mx-lg-3 mx-md-2 my-md-0 my-1">
          <%= link_to "About", about_path %>
        </li>
        <% if logged_in? %>
          <li class="dropdown" id = "noti_Button">
            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#" >
              <em class="fa fa-bell" ></em>
              <span class="label label-danger" id = "noti_Counter" >
                <%= @new_notifications.count %>
              </span>
            </a>
            <ul class="dropdown-menu " >
              <li id = "notifications">
                <%= render @new_notifications %>
              </li>
              <li class="divider"></li>
            </ul>
          </li>
        <% end %>
        <li>
          <div class="search-login-area d-flex align-items-center">
            <div class="top-search-area">
              <form action="#" method="post">
                <input type="search" name="top-search" id="topSearch" placeholder="Search">
                <button type="submit" class="btn"><i class="fa fa-search"></i></button>
              </form>
            </div>
          </div>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" data-toggle="dropdown">
              <%= "#{current_user.name}"%><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li><%= link_to "Users", users_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", log_out_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li>
            <div class="search-login-area d-flex align-items-center">
              <div class="login-area">
                <%= link_to "Login", signin_path %> / <%= link_to "Register", signup_path %>
                </span> <i class="fa fa-lock" aria-hidden="true"></i>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
  <div class="main-banner">
    <div class="container-fluid">
      <div class="style-banner ">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-13">
            <div class="banner-right-txt">
              <h4>Fun and Adventure</h4>
              <h4>With Joyful Trip</h4>
              <div class="two-demo-button mt-lg-4 mt-md-3 mt-3">
                <p> Lorem ipsum dolor sit amet Lorem ipsum dolor sit ametLorem ipsum dolor sit amet</p>
              </div>
              <div class="view-buttn mt-md-4 mt-sm-4 mt-3">
                <% if logged_in? %>
                  <%= link_to "Read More", "#" %>
                <% else  %>
                  <%= link_to "Login", signin_path %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
