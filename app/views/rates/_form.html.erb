<%= form_for [@post, @post.rates.build] do |f| %>
  <div class="field">
    <div id="star-rating"></div>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= f.submit "Cancel", class: "btn btn-primary", type: :reset %>
  </div>
<% end %>
<%= link_to "Back", post_path(@post), class: "btn btn-dark" %>
