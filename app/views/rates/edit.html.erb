<h1>Update rate</h1>
<%= form_for [@post, @rate] do |f| %>
  <div class="field">
    <div id="star-rating"></div>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </div>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to "Back", post_path(@post), class: "btn btn-dark" %>
