<div class="container py-lg-5 py-md-4 py-sm-4 py-3">
  <div class="row">
    <div class="col-lg-3 col-md-4 col-sm-4 contact-form-txt"></div>
    <div class="col-lg-6 col-md-4 col-sm-8 contact-form-txt">
     <%= form_for :session, url: signin_path do |f| %>
        <div class="form-group contact-forms">
         <%= f.label :email %>
         <%= f.email_field :email , class: "form-control" %>
        </div>
         <div class="form-group contact-forms">
          <%= f.label :password %>
          <%= link_to "(Forgot Password)", new_password_reset_path %>
          <%= f.password_field :password , class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          Remember me on this computer
         </div>
          <%= f.submit "Sign In", class: "btn btn-primary" %>
          <%= f.submit "Cancel", class: "btn btn-primary",
            type: :reset %>
      <% end %>
      <br>
      <b>New User ?  <%= link_to "Enjoy With Us !!", signup_path %></b>
    </div>
  </div>
</div>
