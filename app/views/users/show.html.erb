<div class="row">
  <div class="offset-md-2 col-lg-8 offset-lg-3 col-xl-6">
    <div class="card bg-light card-body mb-3 profile">
      <div class="col-md-12">
        <div class="col-12 col-md-8 float-left">
          <h2><%= @user.name %></h2>
          <%= image_tag @user.picture.url if @user.picture? %>
          <p><strong>Bio:</strong><%= @user.bio  %></p>
          <p><strong>Email:</strong><%= @user.email %></p>
          <p><strong>Contact: (+84) </strong><%= @user.phone %></p>
        </div>
        <div class="col-12 col-md-4 float-left text-center">
          <figure>
            <img src="http://www.localcrimenews.com/wp-content/uploads/2013/07/default-user-icon-profile.png" alt="" class="rounded-circle img-fluid">
          </figure>
        </div>
      </div>
      <div class="col-12 divider text-center">
        <div class="col-12 col-md-4 float-left emphasis">
          <h2><strong id="followers"><%= @user.followers.size %></strong></h2>
          <p><small><%= link_to "Followers" ,followers_user_path %></small></p>
          <%= render "follow_form" %>
        </div>
        <div class="col-12 col-md-4 float-left emphasis">
          <h2><strong id="followers"><%= @user.following.size %></strong></h2>
          <p><small><%= link_to "Following" ,following_user_path %></small></p>
          <% if current_user == @user %>
          <button class="btn btn-info btn-block"><span class="fa fa-user"></span><%= link_to "Edit Profile", edit_user_path  %></button>
          <% end %>
        </div>
        <div class="col-12 col-md-4 float-left emphasis">
          <h2><strong><%= @user.posts.size %></strong></h2>
          <p><small>Posts</small></p>
          <div class="btn-group dropup btn-block">
            <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options</button>
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"> <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu text-left" role="menu">
              <li class="divider dropdown-item"></li>
              <li class="dropdown-item">Report this user for spam</li>
              <li class="divider dropdown-item"></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
